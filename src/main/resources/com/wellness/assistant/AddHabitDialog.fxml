<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wellness.assistant.AddHabitController" spacing="20" styleClass="add-habit-dialog">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label fx:id="dialogTitle" text="Add New Habit" styleClass="dialog-title" />
      <Label fx:id="dialogSubtitle" text="Create a healthy routine" styleClass="dialog-subtitle" />
      <Label fx:id="validationMessage" text="" styleClass="validation-message" visible="false" managed="false" />
      
      <GridPane hgap="10.0" vgap="15.0">
         <columnConstraints>
            <ColumnConstraints minWidth="100.0" prefWidth="100.0" />
            <ColumnConstraints minWidth="250.0" prefWidth="250.0" hgrow="ALWAYS" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
         <children>
            <!-- Habit Name -->
            <Label text="Habit Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="habitNameField" promptText="e.g., Morning Walk" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <!-- Habit Type -->
            <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="habitTypeComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- Time -->
            <Label text="Time (HH:MM):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="2" spacing="5.0">
               <children>
                  <TextField fx:id="timeField" promptText="08:00" />
                  <Label text="24-hour format" styleClass="field-hint" />
               </children>
            </VBox>
            
            <!-- Frequency -->
            <Label text="Frequency:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="frequencyComboBox" prefWidth="250.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <!-- Active -->
            <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <CheckBox fx:id="activeCheckBox" text="Active" selected="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <!-- Notes -->
            <Label text="Notes:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <TextArea fx:id="notesArea" GridPane.columnIndex="1" GridPane.rowIndex="5" prefRowCount="3" wrapText="true" promptText="Optional description or instructions" />
         </children>
      </GridPane>
      
      <!-- Button Bar -->
      <HBox spacing="10.0" alignment="CENTER_RIGHT">
         <children>
            <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="secondary-button" />
            <Button fx:id="saveButton" text="Save" onAction="#handleSave" styleClass="primary-button" />
         </children>
      </HBox>
   </children>
</VBox>