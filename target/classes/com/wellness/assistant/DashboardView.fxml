<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wellness.assistant.DashboardController" styleClass="dashboard-view">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" styleClass="dashboard-header">
         <children>
            <VBox>
               <children>
                  <Label fx:id="welcomeLabel" styleClass="welcome-title" text="Welcome Back!" />
                  <Label fx:id="dateLabel" styleClass="date-label" text="Monday, October 13, 2025" />
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addHabitButton" onAction="#handleAddHabitClick" styleClass="primary-button" text="+ Add New Habit">
               <graphic>
                  <FontIcon iconLiteral="fas-plus" />
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </HBox>
      
      <!-- Summary Cards Section -->
      <GridPane hgap="20.0" styleClass="summary-cards" vgap="20.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         
         <children>
            <!-- Today's Progress Card -->
            <VBox styleClass="summary-card" alignment="TOP_LEFT" spacing="8">
               <children>
                     <Label text="Today's Progress" styleClass="card-label">
                        <VBox.margin>
                           <Insets bottom="8.0" />
                        </VBox.margin>
                     </Label>
                     <Label fx:id="todaysProgressValue" styleClass="card-value">
                        <VBox.margin>
                           <Insets bottom="4.0" />
                        </VBox.margin>
                     </Label>
                     <Label styleClass="card-subtitle" text="completed" />
               </children>
            </VBox>
            
            <!-- Active Habits Card -->
            <VBox GridPane.columnIndex="1" styleClass="summary-card" alignment="TOP_LEFT" spacing="8">
               <children>
                     <Label text="Active Habits" styleClass="card-label">
                        <VBox.margin>
                           <Insets bottom="8.0" />
                        </VBox.margin>
                     </Label>
                     <Label fx:id="activeHabitsValue" styleClass="card-value">
                        <VBox.margin>
                           <Insets bottom="4.0" />
                        </VBox.margin>
                     </Label>
                     <Label styleClass="card-subtitle" text="in your routine" />
               </children>
            </VBox>
            
            <!-- Completion Rate Card -->
            <VBox GridPane.rowIndex="1" styleClass="summary-card" alignment="TOP_LEFT" spacing="8">
               <children>
                     <Label text="Completion Rate" styleClass="card-label">
                        <VBox.margin>
                           <Insets bottom="8.0" />
                        </VBox.margin>
                     </Label>
                     <Label fx:id="completionRateValue" styleClass="card-value">
                        <VBox.margin>
                           <Insets bottom="4.0" />
                        </VBox.margin>
                     </Label>
                     <Label styleClass="card-subtitle" text="Keep it up!" />
               </children>
            </VBox>
            
            <!-- Total Logs Card -->
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="summary-card" alignment="TOP_LEFT" spacing="8">
               <children>
                     <Label text="Total Logs" styleClass="card-label">
                        <VBox.margin>
                           <Insets bottom="8.0" />
                        </VBox.margin>
                     </Label>
                     <Label fx:id="totalLogsValue" styleClass="card-value">
                        <VBox.margin>
                           <Insets bottom="4.0" />
                        </VBox.margin>
                     </Label>
                     <Label styleClass="card-subtitle" text="activities today" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="0.0" />
         </padding>
      </GridPane>
      
      <!-- Today's Habits Section -->
      <VBox styleClass="todays-habits-section">
         <children>
               <Label styleClass="section-title" text="Today's Habits">
                  <VBox.margin>
                     <Insets bottom="15.0" />
                  </VBox.margin>
               </Label>
            <ScrollPane fitToWidth="true" styleClass="habits-scroll-pane">
               <content>
                  <VBox fx:id="habitsListContainer" spacing="10.0" styleClass="habits-list" />
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="0.0" />
         </padding>
      </VBox>
      
      <!-- Daily Quote Section -->
      <VBox styleClass="daily-quote-section">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <FontIcon iconLiteral="fas-star" styleClass="quote-icon" />
                  <Label styleClass="quote-title" text="Daily Wellness Quote" />
               </children>
            </HBox>
            <Label fx:id="dailyQuoteLabel" styleClass="daily-quote" text="Health is not valued until sickness comes." />
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="0.0" />
         </padding>
      </VBox>
   </children>
</VBox>
