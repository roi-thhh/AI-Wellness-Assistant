<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wellness.assistant.DashboardController" styleClass="dashboard-view">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" styleClass="dashboard-header">
         <children>
            <VBox>
               <children>
                  <Label fx:id="welcomeLabel" styleClass="welcome-title" text="Welcome Back!" />
                  <Label fx:id="dateLabel" styleClass="date-label" text="Monday, October 13, 2025" />
               </children>
            </VBox>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="addHabitButton" onAction="#handleAddHabitClick" styleClass="primary-button" text="+ Add New Habit">
               <graphic>
                  <de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView glyphName="PLUS" />
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </HBox>
      
      <!-- Summary Cards Section -->
      <GridPane hgap="20.0" styleClass="summary-cards" vgap="20.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <!-- Today's Progress Card -->
            <VBox styleClass="summary-card">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Today's Progress" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Rectangle styleClass="card-icon" />
                     </children>
                  </HBox>
                  <Label fx:id="todaysProgressValue" styleClass="card-value" text="2/4" />
                  <Label styleClass="card-subtitle" text="50% completed" />
               </children>
            </VBox>
            
            <!-- Active Habits Card -->
            <VBox GridPane.columnIndex="1" styleClass="summary-card">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Active Habits" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Rectangle styleClass="category-icon exercise" />
                     </children>
                  </HBox>
                  <Label fx:id="activeHabitsValue" styleClass="card-value" text="4" />
                  <Label styleClass="card-subtitle" text="Habits in your routine" />
               </children>
            </VBox>
            
            <!-- Completion Rate Card -->
            <VBox GridPane.rowIndex="1" styleClass="summary-card">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Completion Rate" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Rectangle styleClass="category-icon nutrition" />
                     </children>
                  </HBox>
                  <Label fx:id="completionRateValue" styleClass="card-value" text="50%" />
                  <Label styleClass="card-subtitle" text="Keep it up!" />
               </children>
            </VBox>
            
            <!-- Total Logs Card -->
            <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="summary-card">
               <children>
                  <HBox alignment="CENTER_LEFT">
                     <children>
                        <Label text="Total Logs" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Rectangle styleClass="category-icon medicine" />
                     </children>
                  </HBox>
                  <Label fx:id="totalLogsValue" styleClass="card-value" text="2" />
                  <Label styleClass="card-subtitle" text="Activities today" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="0.0" />
         </padding>
      </GridPane>
      
      <!-- Today's Habits Section -->
      <VBox styleClass="todays-habits-section">
         <children>
            <Label styleClass="section-title" text="Today's Habits" />
            <ScrollPane fitToWidth="true" styleClass="habits-scroll-pane">
               <content>
                  <VBox fx:id="habitsListContainer" spacing="10.0" styleClass="habits-list" />
               </content>
            </ScrollPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="30.0" right="30.0" top="0.0" />
         </padding>
      </VBox>
      
      <!-- Daily Quote Section -->
      <VBox styleClass="daily-quote-section">
         <children>
            <HBox alignment="CENTER_LEFT">
               <children>
                  <de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView glyphName="STAR" styleClass="quote-icon" />
                  <Label styleClass="quote-title" text="Daily Wellness Quote" />
               </children>
            </HBox>
            <Label fx:id="dailyQuoteLabel" styleClass="daily-quote" text="Health is not valued until sickness comes." />
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="0.0" />
         </padding>
      </VBox>
   </children>
</VBox>
