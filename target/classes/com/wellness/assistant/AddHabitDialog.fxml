<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wellness.assistant.AddHabitController" headerText="Add New Habit" styleClass="add-habit-dialog">
   <content>
      <GridPane hgap="10.0" vgap="10.0">
         <columnConstraints>
            <ColumnConstraints minWidth="100.0" />
            <ColumnConstraints minWidth="200.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="30.0" />
            <RowConstraints minHeight="30.0" />
            <RowConstraints minHeight="30.0" />
            <RowConstraints minHeight="30.0" />
         </rowConstraints>
         <children>
            <!-- Habit Name -->
            <Label text="Habit Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="habitNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
            
            <!-- Habit Type -->
            <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <ComboBox fx:id="habitTypeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <!-- Time -->
            <Label text="Time (HH:MM):" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="timeField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            
            <!-- Frequency -->
            <Label text="Frequency:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <ComboBox fx:id="frequencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </GridPane>
   </content>
   <buttonTypes>
      <ButtonType fx:id="saveButton" onAction="#handleSave" text="Save" />
      <ButtonType fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
   </buttonTypes>
</DialogPane>